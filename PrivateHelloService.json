{
  "type": "ServiceCluster",
  "name": "PublicHelloService",

  "parameters": {
    "PORT": {
      "default": 9999
    },
    "NUM_INSTANCES": {
      "default": 1
    }
  },

  "https": false,
  "public": false,
  "port": "${PORT}",
  "numInstances": "${NUM_INSTANCES}",

  "build": {
    "repository": {
      "url": "ssh://git@github.com/kevindrosendahl/example__hello-world-service-chaining.git",
      "commit": "a716e6f5aa4de3ac05af613d8562ee833727169a"
    },
    "language": "node6.9.4",
    "cmd": "npm install"
  },

  "exec": {
    "cmd": "node",
    "args": [
			"lib/PrivateHelloService",
			"-p",
			"${PORT}"
		]
  },

  "resources": {
    "instanceType": "t2.micro"
  }
}

